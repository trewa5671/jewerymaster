<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".DetailsActivity"
    android:background="@color/backg">

    <ImageView
        android:id="@+id/image_product"
        android:layout_width="235dp"
        android:layout_height="215dp"
        android:layout_above="@+id/text_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="11dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/text_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.47"
        android:background="@drawable/krugliye_ugli"/>

    <TextView
        android:id="@+id/text_name"
        android:layout_width="255dp"
        android:layout_height="92dp"
        android:layout_above="@+id/text_description"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="21dp"
        android:layout_toStartOf="@+id/text_price"
        android:fontFamily="@font/semi_bold"
        android:textAppearance="?android:textAppearanceMedium"
        android:textSize="21sp"
        app:layout_constraintBottom_toTopOf="@+id/text_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523" />

    <TextView
        android:id="@+id/text_price"
        android:layout_width="127dp"
        android:layout_height="62dp"
        android:layout_above="@+id/text_description"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="51dp"
        android:fontFamily="@font/semi_bold"
        android:textAppearance="?android:textAppearanceSmall"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/text_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_description"
        android:layout_width="match_parent"
        android:layout_height="309dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="79dp"
        android:textSize="19sp"
        android:fontFamily="@font/semi_bold"
        android:textAppearance="?android:textAppearanceSmall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />


</RelativeLayout>